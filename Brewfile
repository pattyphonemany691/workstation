# Example: https://lincolnmullen.com/blog/setting-up-a-new-mac-with-homebrew/

# cat cli tool alternative. https://formulae.brew.sh/formula/bat
brew "bat"

# https://github.com/romkatv/powerlevel10k
tap "romkatv/powerlevel10k"
brew "romkatv/powerlevel10k/powerlevel10k"

# https://github.com/ryanoasis/nerd-fonts#option-4-homebrew-fonts
tap "homebrew/cask-fonts"
cask "font-hack-nerd-font"

# https://www.warp.dev/ requires account creation
#cask "warp"
# spotlight alternative. https://www.alfredapp.com/
#cask "alfred"
# snap windows. https://rectangleapp.com/
cask "rectangle"
# password manager
cask "bitwarden"
# enable mouse scroll differently than trackpad. https://github.com/ther0n/UnnaturalScrollWheels Alternative to https://pilotmoon.com/scrollreverser/
cask "unnaturalscrollwheels"
# enable a calendar in menu bar. https://www.mowglii.com/itsycal/
cask "itsycal"
# view timezones in menu bar. https://github.com/n0shake/clocker
cask "clocker"
# screenshot/markup alternative. https://flameshot.org/
cask "flameshot"